<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activities.CritiqueActivity"
    tools:showIn="@layout/activity_critique">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/speed_view"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:text="Speed:"
            app:layout_constraintBottom_toTopOf="@+id/speed_critique_view"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="40dp" />

        <TextView
            android:id="@+id/speed_critique_view"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Speed Critique:"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="75dp" />

        <TextView
            android:id="@+id/height_view"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="Height:"
            app:layout_constraintBottom_toTopOf="@+id/height_critique_view"
            app:layout_constraintTop_toBottomOf="@+id/speed_critique_view"
            tools:layout_editor_absoluteX="40dp" />

        <TextView
            android:id="@+id/height_critique_view"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Height Critique:"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="190dp" />

        <TextView
            android:id="@+id/time_view"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="8dp"
            android:text="Time:"
            app:layout_constraintBottom_toTopOf="@+id/time_critique"
            app:layout_constraintTop_toBottomOf="@+id/height_critique_view"
            app:layout_constraintVertical_bias="0.163"
            tools:layout_editor_absoluteX="40dp" />

        <TextView
            android:id="@+id/time_critique"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="8dp"
            android:text="Time Critique:"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="40dp" />

        <Button
            android:id="@+id/get_critique"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Critique" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>